# Azure OpenAI Configuration for LLM Redaction
# Copy this file to .env and fill in your Azure OpenAI credentials

# Azure OpenAI Service
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini

# LLM Configuration
MODEL_TEMPERATURE=0.1
MAX_TOKENS=4000
CHUNK_SIZE=3000
OVERLAP_SIZE=200

# PII Detection Settings
CONFIDENCE_THRESHOLD=0.8
REDACTION_STYLE=standard

# Supported PII Categories
PII_CATEGORIES=names,phone_numbers,emails,addresses,ssn,credit_cards,dates,ip_addresses

# Cost Tracking
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD=1.00

# Processing Options  
BATCH_SIZE=5
PARALLEL_PROCESSING=false
ENABLE_CACHING=true
